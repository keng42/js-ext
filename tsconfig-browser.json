{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "declaration": true,
    "outFile": "./lib/browser/js-ext.bundle.js",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test", "**/__tests__/*", "src/index.ts"]
}
